<%= form_with model: task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, placeholder: "Type the task title" %>
  <%= f.label :details %>
  <%= f.text_field :details, placeholder: "Type the task description" %>
  <%= f.label :completed %>
  <%= f.check_box :completed %>
  <%= f.submit %>
<% end %>
