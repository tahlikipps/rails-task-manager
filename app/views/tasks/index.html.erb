<h2>All Tasks</h2>

<% if @tasks.count != 0 %>
  <ul style="list-style-type: none;">
    <% @tasks.each do |task|  %>
      <li>
        <% if task.completed? %>
          <i class="fa-regular fa-square-check"></i>
        <% else %>
          <i class="fa-regular fa-square"></i>
        <% end %>
        <%= link_to task.title, task_path(task) %>
      </li>
    <% end %>
  </ul>
<% else %>
  <%= "No tasks found!" %>
<% end %>
<%= link_to "Add a task", new_task_path %>
