<h2><%= @task.title %></h2>
<div class="task-details"> <%= @task.details %></div>
<br>

    <%= link_to edit_task_path(@task) do %><i class="fa-regular fa-pen-to-square"></i><% end %>
    <%= link_to task_path(@task), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } do %>
          <i class="fa-regular fa-trash-can"></i>
        <% end %>
<br>
<hr>
<br>
<%= link_to tasks_path do %><i class="fa-solid fa-arrow-left"></i>Back to all tasks<% end %>
